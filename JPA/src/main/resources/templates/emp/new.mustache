{{>layouts/header}}

<h2>New Employee</h2>

<form action="/test" method="post">
    <div class="form-group">
        <label for="empno">EMPNO</label>
        <input type="number" class="form-control" id="empno" name="empno" required>
    </div>
    <div class="form-group">
        <label for="ename">ENAME</label>
        <input type="text" class="form-control" id="ename" name="ename" maxlength="10" required>
    </div>
    <div class="form-group">
        <label for="job">JOB</label>
        <input type="text" class="form-control" id="job" name="job" maxlength="9" required>
    </div>
    <div class="form-group">
        <label for="mgr">MGR</label>
        <input type="number" class="form-control" id="mgr" name="mgr">
    </div>
    <div class="form-group">
        <label for="hiredate">HIREDATE</label>
        <input type="date" class="form-control" id="hiredate" name="hiredate" required>
    </div>
    <div class="form-group">
        <label for="sal">SAL</label>
        <input type="number" class="form-control" id="sal" name="sal" required>
    </div>
    <div class="form-group">
        <label for="comm">COMM</label>
        <input type="number" class="form-control" id="comm" name="comm">
    </div>
    <div class="form-group">
        <label for="deptno">DEPTNO</label>
        <input type="number" class="form-control" id="deptno" name="deptno" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<a href="/emp">Back to Employee List</a>

{{>layouts/footer}}
